---
name: Section
description: A shared section
variables:
  type:
    - string
    - The color theme of the section. Valid options are "white" & "blue".
  align:
    - string
    - Indicates the text alignment for the section. Defaults to "center", valid options are "left"
---

{% assign align_class = "text-center" %}
{% assign bgcolor = "bg-gray-50" %}

{% if align == "left" %}
{% assign align_class = "text-left" %}
{% endif %}

{% if type == "white" %}
{% assign bgcolor = "bg-white" %}
{% elsif type == "blue" %}
{% assign bgcolor = "bg-blue-600" %}
{% endif %}

<section class="relative {{ bgcolor }} mt-16 mb-20 mx-4 sm:mx-6 lg:mt-24 lg:mb-28 lg:mx-8">
  <div class="absolute inset-0">
    <div class="{{ bgcolor }} h-1/3 sm:h-2/3"></div>
  </div>
  <div class="relative mx-auto max-w-7xl">
    <div class="{{ align_class }}">
      {% if toptitle %}
        <div class="text-base font-semibold leading-6 tracking-wider uppercase">
          {{ toptitle }}
        </div>
      {% endif %}
      <h2 class="mt-2 text-3xl font-extrabold leading-9 tracking-tight sm:text-4xl sm:leading-10">
        {{ title }}
      </h2>
      {% if subtitle %}
      <p class="mt-3 text-lg leading-7">
        {{ subtitle }}
      </p>
      {% endif %}
    </div>
    {{ content }}
  </div>
</section>
