---
name: Button
description: Displays a card a link styled as a button
variables:
  url:
    - url
    - The address of the page to go to
  local:
    - boolean
    - Indicates if the url is linking to a local resource.
  size:
    - string
    - "The size of the button. Options: xs, sm, lg, xl."
  variant:
    - string
    - "The variant of the button. Options: secondary, white."
  text:
    - string
    - "The text that will go inside of the button"
  content: string
---
{% assign base_classes = "inline-flex items-center border border-transparent font-medium border no-underline" %}
{% assign transition_classes = "transition ease-in-out duration-150" %}
{% assign size_classes = "px-4 py-2 text-sm leading-5 rounded-md" %}
{% assign variant_classes = "" %}
{% assign target_value = "_self" %}

{% unless local %}
  {% assign target_value = "_blank" %}
{% endunless %}

{% if size == "xs" %}
  {% assign size_classes = "px-2.5 py-1.5 text-xs leading-4 rounded" %}
{% elsif size=="sm" %}
  {% assign size_classes = "px-3 py-2 text-sm leading-4 rounded-md" %}
{% elsif size=="lg" %}
  {% assign size_classes = "px-4 py-2 text-base leading-6 rounded-md" %}
{% elsif size=="xl" %}
  {% assign size_classes = "px-5 py-3 text-base leading-6 rounded-md" %}
{% endif %}

{% if variant == "secondary" %}
  {% assign variant_classes = "border-transparent text-red-700 hover:text-red-700 bg-red-100 hover:bg-red-50 focus:outline-none focus:border-red-300 focus:shadow-outline-red active:bg-red-200" %}
{% elsif variant=="white" %}
  {% assign variant_classes = "border-gray-300 text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50" %}
{% elsif variant=="dark" %}
  {% assign variant_classes = "border-transparent text-gray-100 hover:text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:border-cool-gray-300 focus:shadow-outline-cool-gray active:bg-cool-gray-900" %}
{% else %}
  {% assign variant_classes = "border-transparent text-white hover:text-white bg-red-600 hover:bg-red-500 focus:outline-none focus:border-red-700 focus:shadow-outline-red active:bg-red-700" %}
{% endif %}

{% if text %}
  {% if variant == "secondary" %}
    <a target="{{ target_value }}" href="{{ url }}" class="{{ base_classes }} {{ size_classes }} {{ variant_classes }} {{ transition_classes }}">{{ text }}</a>
  {% else %}
    <span class="inline-flex rounded-md shadow-sm">
      <a target="{{ target_value }}" href="{{ url }}" class="{{ base_classes }} {{ size_classes }} {{ variant_classes }} {{ transition_classes }}">{{ text }}</a>
    </span>
  {% endif %}
{% else %}
  {% if variant == "secondary" %}
    <a target="{{ target_value }}" href="{{ url }}" class="{{ base_classes }} {{ size_classes }} {{ variant_classes }} {{ transition_classes }}">{{ content }}</a>
  {% else %}
    <span class="inline-flex rounded-md shadow-sm">
      <a target="{{ target_value }}" href="{{ url }}" class="{{ base_classes }} {{ size_classes }} {{ variant_classes }} {{ transition_classes }}">{{ content }}</a>
    </span>
  {% endif %}
{% endif %}
