---
name: Footer
description: The content that goes in the footer
variables:
  metadata:
    - data
    - metadata for the site
---
<footer class="bg-gray-900">
  {% render "shared/newsletter_signup" %}
  <div class="max-w-screen-xl px-4 py-6 mx-auto border-t border-gray-700 sm:px-6 lg:py-8 lg:px-8">
    <div class="">
      <div class="grid grid-cols-2 gap-8">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h4 class="text-sm font-semibold leading-5 tracking-wider text-gray-400 uppercase">
              Main
            </h4>
            <ul class="mt-4">
              {% for item in site.data.navigation.main %}
                <li class="mt-4">
                <a href="{{ item.link }}" target="{{item.target }}" class="text-base leading-6 text-gray-300 hover:text-white">
                  {{ item.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h4 class="text-sm font-semibold leading-5 tracking-wider text-gray-400 uppercase">
              Community
            </h4>
            <ul class="mt-4">
              {% for item in site.data.navigation.community %}
                <li class="mt-4">
                <a href="{{ item.link }}" target="{{item.target }}" class="text-base leading-6 text-gray-300 hover:text-white">
                  {{ item.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h4 class="text-sm font-semibold leading-5 tracking-wider text-gray-400 uppercase">
              Professional
            </h4>
            <ul class="mt-4">
              {% for item in site.data.navigation.professional %}
                <li class="mt-4">
                <a href="{{ item.link }}" target="{{item.target }}" class="text-base leading-6 text-gray-300 hover:text-white">
                  {{ item.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h4 class="text-sm font-semibold leading-5 tracking-wider text-gray-400 uppercase">
              Site
            </h4>
            <ul class="mt-4">
              {% for item in site.data.navigation.site %}
                <li class="mt-4">
                <a href="{{ item.link }}" target="{{item.target }}" class="text-base leading-6 text-gray-300 hover:text-white">
                  {{ item.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="pt-8 mt-8 border-t border-gray-700 md:flex md:items-center md:justify-between">
      <div class="flex space-x-6 md:order-2">
        {% for resource in site.data.links.socials %}
            <a target="_blank" class="text-gray-400 hover:text-gray-300" href="{{ resource.url }}">
              <span class="sr-only">{{ resource.sr }}</span>
              {% svg "./assets/images/logos/{{ resource.name }}.svg" %}
            </a>
        {% endfor %}
      </div>
      <p class="mt-8 text-base leading-6 text-gray-400 md:mt-0 md:order-1">
        &copy; 2020 Andrew Mason. All rights reserved.
      </p>
    </div>
  </div>
</footer>
