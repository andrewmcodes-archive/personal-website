<div class="flex flex-col overflow-hidden bg-white rounded-lg shadow-lg">
  <div class="flex flex-col justify-between flex-1 p-6 bg-cool-gray-950">
    <div class="flex-1">
      <p class="text-sm font-medium leading-5 text-blue-500">
        {% for tag in project.tags %}
        <a href="{{tag}}" class="hover:underline">{{tag}}</a>
        {% endfor %}

      </p>
      <a href="{{ project.url }}" class="block">
        <h3 class="mt-2 text-xl font-semibold leading-7 text-gray-900">
          {{ project.name }}
        </h3>
      </a>
    </div>
  </div>
</div>
