<div class="mb-8 lg:mb-12">
  <div>
    <h3 class="text-lg font-medium leading-6 text-gray-900">
      Metadata
    </h3>
  </div>
  <div class="pt-5 mt-5 border-t border-gray-200">
    {% rendercontent "table/table", container: true %}
      {% with header %}
        <th>Path</th>
        <th>Description</th>
      {% endwith %}
      {% with rows %}
        <tr>
          <td>
            <code>{{ component.relative_path }}</code>
          </td>
          <td>
            {{ component.metadata.description | markdownify }}
          </td>
        </tr>
      {% endwith %}
    {% endrendercontent %}
  </div>
</div>
