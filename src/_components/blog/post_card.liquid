---
name: "Blog: Post Card"
description: The content for your blog post card
variables:
  post:
    - object
    - a post object
mocks:
  post:
    title: My mocked title
    thumb_img_path: https://via.placeholder.com/480
    category: mock
    url: https://mymocked.path
    excerpt: "lorem ipsum stuff and things"
    date: 2020-07-11T04:01:34.736Z
---

<a href="{{ post.url }}" class="flex flex-col overflow-hidden transition-transform duration-300 ease-in-out transform rounded-lg shadow sm:shadow-md md:shadow-lg hover:-translate-y-2 hover:shadow-xl">
  <div class="flex-shrink-0">
    <img class="object-cover w-full h-48" src="{{ post.thumb_img_path }}" alt="{{ post.title }}" />
  </div>
  <div class="flex flex-col justify-between flex-1 p-6 bg-white">
    <div class="prose">
        <h3 class="overflow-hidden break-words">
          {{ post.title }}
        </h3>
        <p>
          {{ post.excerpt }}
        </p>
    </div>
      <div class="flex items-center mt-6">
      <div class="flex text-sm leading-5 text-gray-500">
        <time datetime="{{ post.date | date: "%Y-%B-%D" }}">
          {{ post.date | date: "%B %-d, %Y" }}
        </time>
      </div>
    </div>
  </div>
</a>
